{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      
    }
  },

  "include": [
    "src"
  ]
}
